<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <listener>
        <listener-class>com.epam.drozdyk.webshop.listener.ApplicationContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>com.epam.drozdyk.webshop.filter.impl.LocalizationFilter</filter-class>
        <init-param>
            <param-name>defaultLangTag</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>availableLangTags</param-name>
            <param-value>en,ru,uk</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.drozdyk.webshop.filter.impl.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <param-name>imgDirectory</param-name>
        <param-value>D:\img\</param-value>
    </context-param>
    <context-param>
        <param-name>securityDir</param-name>
        <param-value>D:\security\</param-value>
    </context-param>
    <context-param>
        <param-name>captchaService</param-name>
        <param-value>cookie</param-value>
    </context-param>
    <context-param>
        <param-name>localeService</param-name>
        <param-value>session</param-value>
    </context-param>
    <context-param>
        <param-name>localeCookieMaxAge</param-name>
        <param-value>24</param-value>
    </context-param>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <jsp-config>
        <taglib>
            <taglib-uri>http://drozdyk.epam.com/webshop/tags</taglib-uri>
            <taglib-location>/WEB-INF/tags/custom.tld</taglib-location>
        </taglib>
    </jsp-config>
    <resource-ref>
        <description>DataSource</description>
        <res-ref-name>com.mysql.cj.jdbc.Driver</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>